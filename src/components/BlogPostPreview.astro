---
import type { Fragment, CollectionEntry } from "astro:content";
import { extractPreview } from "../my";
interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const excerpt = extractPreview(post.body + "", 350);
---

<style>
  .preview {
    max-height: 200px;
    width: 100%;
    border: 0;
    /* padding-bottom: 10px; */
  }

  pre.preview {
    white-space: normal;
  }
</style>

<pre class="preview">
<Fragment set:html={excerpt} />
</pre>
